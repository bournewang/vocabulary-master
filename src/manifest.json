{
    "name": "Vocabulary Master",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "An awesome tool to help master English vocabulary.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ],
    "action": {
        "default_popup": "js/popup.js",
        "default_icon": {
            "16": "/images/icon-16x16.png",
            "32": "/images/icon-32x32.png",
            "48": "/images/icon-48x48.png",
            "128": "/images/icon-128x128.png"
        }
    },
    "icons": {
        "16": "images/icon-16x16.png",
        "48": "images/icon-48x48.png",
        "128": "images/icon-128x128.png"
    },
    "options_page": "options.html",
    "web_accessible_resources": [{
        "resources": [
            "images/music-32.png"
        ],
        "matches": ["<all_urls>"]
    }]
}
